@model GymAddVM;

@{
    ViewData["Title"] = "Edit";
    string poruka;
}


@{ 
    if (Model.ID == 0)
        poruka = "ADD";
    else
        poruka = "EDIT";
}

<h1>@poruka</h1>

<form asp-action="Save" asp-controller="Gym" enctype="multipart/form-data">
    <div class="form-group" style="display : none">
        <label>ID</label>
        <input readonly asp-for="ID" />
    </div>
    <div class="form-group">
        <label>Name:</label>
        <input asp-for="Name" />
    </div>
    <div class="form-group">
        <label>Description</label>
        <input asp-for="Description" />
    </div>
    <div class="form-group">
        <label>Address</label>
        <input asp-for="Address" />
    </div>
    <div class="form-control">
        <label>Image</label>
        <input asp-for="GymImage" />
    </div>


    <button type="submit" class="btn btn-primary" value="Save">Submit</button>
</form>






